<ws:partial template="Controls/gridOld:ColumnTemplate" itemData="{{itemData}}">
<ws:contentTemplate>
    <ws:partial template="Controls/list:EditingTemplate"
                value="{{ itemData.item[itemData.column.displayProperty || 'title'] }}"
                itemData="{{itemData}}"
                enabled="{{true}}">
        <ws:editorTemplate>
            <Controls.validate:InputContainer name="InputValidate">
                <ws:validators>
                    <ws:Array>
                        <ws:Function value="{{itemData.item[itemData.column.displayProperty || 'title']}}">Controls/validate:isRequired</ws:Function>
                        <ws:Function changed="{{itemData.item.getState()}}">Controls-demo/grid/EditInPlace/Validation/Index:ChangedChecker</ws:Function>
                    </ws:Array>
                </ws:validators>
                <ws:content>
                    <Controls.input:Text contrastBackground="{{true}}" bind:value="itemData.item[itemData.column.displayProperty || 'title']"
                                         selectOnClick="{{ false }}" />
                </ws:content>
            </Controls.validate:InputContainer>
        </ws:editorTemplate>
    </ws:partial>
</ws:contentTemplate>
</ws:partial>
