<div class="controlsDemo__wrapper">
    <div class="controlsDemo__wrapper controlsDemo__grid-itemActions-noHighlight-inside">
        <h3>Inside</h3>
        <Controls.gridOld:View
                keyProperty="id"
                source="{{_viewSource}}"
                columns="{{_columns}}"
                itemActions="{{_itemActions}}">
        <ws:itemTemplate>
            <ws:partial template="Controls/gridOld:ItemTemplate" highlightOnHover="{{false}}"/>
        </ws:itemTemplate>
        </Controls.gridOld:View>
    </div>
    <div class="controlsDemo__wrapper controlsDemo__grid-itemActions-noHighlight-outside">
        <h3>Outside</h3>
        <Controls.gridOld:View
                keyProperty="id"
                source="{{_viewSource}}"
                columns="{{_columns}}"
                itemActions="{{_itemActions}}"
                itemActionsPosition="outside">
        <ws:itemTemplate>
            <ws:partial template="Controls/gridOld:ItemTemplate" highlightOnHover="{{false}}"/>
        </ws:itemTemplate>
        </Controls.gridOld:View>
    </div>
</div>
