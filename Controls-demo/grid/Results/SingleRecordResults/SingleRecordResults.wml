<div class="controlsDemo__wrapper">
    <Controls.toggle:Checkbox bind:value="_showResultsVisibility" caption="resultsVisibility"/>

    <div>
        <Controls.grid:View
                keyProperty="id"
                attr:class="controlsDemo__inline-flex"
                source="{{_viewSource}}"
                columns="{{_columns}}"
                resultsPosition="bottom"
                resultsVisibility="{{ _showResultsVisibility ? 'visible' : 'hidden'}}"/>
    </div>
</div>
