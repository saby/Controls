<div class="controlsDemo__wrapper">
    <Controls.gridOld:View
            keyProperty="id"
            source="{{_viewSource}}"
            columns="{{_columns}}"
            attr:style="max-width: 700px">
        <ws:itemTemplate>
            <ws:partial template="Controls/gridOld:ItemTemplate"
                        itemData="{{itemData}}"
                        backgroundColorStyle="{{itemTemplate.itemData.item.get('population') > 1000000000 ? 'danger'}}"/>
        </ws:itemTemplate>
    </Controls.gridOld:View>
</div>