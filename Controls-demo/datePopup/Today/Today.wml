<div class="controlsDemo__wrapper controlsDemo__flexRow controlsDemo__flex-jc-sa">
    <div class="controlsDemo__cell">
        <div class="controls-text-label controlsDemo__maxWidth200">Today is monday</div>
        <Controls.datePopup
                name="datePopup1"
                selectionType="range"
                startValue="{{_startValueRange}}"
                endValue="{{_endValueRange}}"
                _date="{{_date}}"
        />
    </div>
    <div class="controlsDemo__cell">
        <div class="controls-text-label controlsDemo__maxWidth200">Today is weekend</div>
        <Controls.datePopup
                name="datePopup2"
                selectionType="range"
                startValue="{{_startValueRange}}"
                endValue="{{_endValueRange}}"
                _date="{{_dateWeekend}}"
        />
    </div>
</div>
