<div class="controlsDemo__wrapper controlsDemo_fixedWidth500">
    <div class="controlsDemo__cell">
        <div class="controls-text-label_theme-{{_options.theme}}">displayMode = 'multiline'</div>
        <Controls.breadcrumbs:HeadingPath attr:id="double"
                                          items="{{_items}}"
                                          parentProperty="parent"
                                          keyProperty="id"
                                          displayMode="multiline"/>
    </div>
    <div class="controlsDemo__cell">
        <div class="controls-text-label_theme-{{_options.theme}}">displayMode = 'multiline' with 1 button back </div>
        <Controls.breadcrumbs:HeadingPath attr:id="double"
                                          items="{{_item}}"
                                          parentProperty="parent"
                                          keyProperty="id"
                                          displayMode="multiline"/>
    </div>
    <div class="controlsDemo__cell">
        <div class="controls-text-label_theme-{{_options.theme}}">displayMode = 'default'</div>
        <Controls.breadcrumbs:HeadingPath attr:id="single"
                                          items="{{_items}}"
                                          parentProperty="parent"
                                          keyProperty="id"/>
    </div>
</div>
