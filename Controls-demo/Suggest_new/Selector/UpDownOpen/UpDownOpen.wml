<div class="controlsDemo__wrapper controlsDemo__flexRow">
    <div class="controlsDemo__wrapper__horizontal controlsDemo__cell controlsDemo__ml2">
        <div class="controls-text-label">Открытие автодополнения вниз</div>
        <Controls.suggest:Input
                attr:class="controlsDemo__input demo-SuggestNewSelector__openDown"
                bind:value="_suggestDownValue"
                displayProperty="title"
                searchParam="title"
                autoDropDown="{{true}}"
                navigation="{{_navigation}}"
                source="{{_source}}">
            <ws:suggestTemplate templateName="wml!Controls-demo/Suggest_new/Selector/UpDownOpen/resources/SuggestTemplate">
                <ws:templateOptions demoClass="demo-SuggestInputList"/>
            </ws:suggestTemplate>
        </Controls.suggest:Input>
    </div>
    <div class="controlsDemo__wrapper__horizontal controlsDemo__cell controlsDemo__ml2 ControlsDemo-Suggest_down">
        <div class="controls-text-label">Открытие автодополнения вверх</div>
        <Controls.suggest:Input
                attr:class="controlsDemo__input demo-SuggestNewSelector__openUp"
                bind:value="_suggestUpValue"
                displayProperty="title"
                searchParam="title"
                autoDropDown="{{true}}"
                navigation="{{_navigation}}"
                source="{{_source}}">
            <ws:suggestTemplate templateName="wml!Controls-demo/Suggest_new/Selector/UpDownOpen/resources/SuggestTemplate">
                <ws:templateOptions demoClass="demo-SuggestInputList"/>
            </ws:suggestTemplate>
        </Controls.suggest:Input>
    </div>
</div>
