<ws:partial template="Controls/grid:ColumnTemplate" itemData="{{itemData}}">
    <ws:contentTemplate>
        <ws:partial template="Controls/list:BaseEditingTemplate" itemData="{{itemData}}">
            <ws:viewTemplate>{{ itemData.item.get('invoice') }}</ws:viewTemplate>
            <ws:editorTemplate>
                <div>
                    <div class="demo-EditableGrid__editor-flexWrapper" style="width: 100%;">
                        <div class="demo-EditableGrid__editor-flexWrapper">
                            <Controls.input:Text contrastBackground="{{true}}" value="{{itemData.item.get('documentNum')}}" on:valueChanged="onChange1('documentNum', itemData.item)"
                                                 placeholder="Номер"/>
                        </div>
                        <div class="demo-EditableGrid__editor-flexWrapper">
                            <Controls.input:Number contrastBackground="{{true}}" value="{{itemData.item.get('taxBase')}}" on:valueChanged="onChange1('taxBase', itemData.item)"
                                                   placeholder="Сумма"/>
                        </div>
                        <div class="demo-EditableGrid__editor-flexWrapper">
                            <span class="demo-EditableGrid__editor-description">Признак ТД</span>
                            <Controls.dropdown:Combobox
                                    selectedKey="{{selectedKey}}"
                                    on:selectedKeyChanged="onChange2()"
                                    keyProperty="id"
                                    displayProperty="title"
                                    source="{{documentSignMemory}}"/>
                        </div>
                    </div>
                    <div class="demo-EditableGrid__editor-flexWrapper demo-EditableGrid__editor-rowTopSpacing" style="width: 100%;">
                        <div>

                            <Controls.input:Text contrastBackground="{{true}}" value="{{itemData.item.get('document')}}" on:valueChanged="onChange1('document', itemData.item)" placeholder="б/н"/>
                            <Controls.input:Date contrastBackground="{{true}}" value="{{itemData.item.get('documentDate')}}" on:valueChanged="onChange1('documentDate', itemData.item)"/>
                        </div>
                        <div>
                            <Controls.input:Text contrastBackground="{{true}}" value="{{itemData.item.get('serviceContract')}}" on:valueChanged="onChange1('serviceContract', itemData.item)"
                                                 placeholder="Номер"/>
                        </div>
                    </div>

                    <div class="demo-EditableGrid__editor-flexWrapper demo-EditableGrid__editor-rowTopSpacing" style="width: 100%;">
                        <Controls.input:Text contrastBackground="{{true}}" value="{{itemData.item.get('description')}}" on:valueChanged="onChange1('description', itemData.item)"
                                             placeholder="примечание" attr:style="width: 100%;"/>
                    </div>
                </div>

            </ws:editorTemplate>
        </ws:partial>
    </ws:contentTemplate>
</ws:partial>
