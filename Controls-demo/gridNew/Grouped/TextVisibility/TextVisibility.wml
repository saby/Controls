    <div class="controlsDemo__cell ControlsDemo-grouped__base">
        <Router.router:Reference attr:class="controls-text-label"
                                 state="/Controls-demo/app/:app"
                                 app="{{ 'Controls-demo/gridNew/Grouped/TextVisibility/Base/Index' }}">
