<div class="controlsDemo__wrapper" style="max-width: 700px;">
        <Controls.scroll:Container attr:style="height: 350px; width: fit-content;">
                <Controls.explorer:View
                    source="{{_viewSource}}"
                    bind:root="_root"
                    attr:class="demo-Explorer"
                    keyProperty="id"
                    displayProperty="title"
                    parentProperty="parent"
                    columnScroll="{{true}}"
                    stickyColumnsCount="{{1}}"
                    nodeProperty="parent@"
                    viewMode="{{_viewMode}}"
                    rowSeparatorVisibility="{{true}}"
                    header="{{_header}}"
                    columns="{{_columns}}">
                </Controls.explorer:View>
        </Controls.scroll:Container>
</div>
