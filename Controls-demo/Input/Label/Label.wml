<div class="controlsDemo__wrapper">
   <div class="controlsDemo__cell">
      <div class="controls-text-label">required=false</div>
      <Controls.input:Label caption="Label" required="{{false}}"/>
      <Controls.input:Text attr:class="controlsDemo__input" bind:value="_value"
                           placeholder="{{_placeholder}}"/>
   </div>
   <div class="controlsDemo__cell">
      <div class="controls-text-label">required=true</div>
      <Controls.input:Label caption="Label" required="{{true}}"/>
      <Controls.input:Text attr:class="controlsDemo__input" bind:value="_requiredValue"
                           placeholder="{{_placeholder}}"/>
   </div>
   <div class="controlsDemo__cell">
      <div>
         <Controls.input:Label caption="Label on top" required="{{false}}"/>
      </div>
      <Controls.input:Text attr:class="controlsDemo__input controls-Input_negativeOffset" bind:value="_topValue"
                           placeholder="{{_placeholder}}"/>
   </div>
</div>
