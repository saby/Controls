<div class="controlsDemo__wrapper">
    <Controls.scroll:Container attr:style="width: 600px; height: 400px">
        <Controls.treeGridOld:View
                keyProperty="id"
                parentProperty="parent"
                nodeProperty="type"
                source="{{_viewSource}}"
                header="{{_header}}"
                bind:expandedItems="_expandedItems"
                columns="{{_columns}}"
                columnScroll="{{true}}"
                itemActions="{{ _itemActions }}"
                stickyColumnsCount="{{2}}">
            <ws:itemTemplate>
                <ws:partial template="Controls/treeGridOld:ItemTemplate" colspanNodes="{{true}}"/>
            </ws:itemTemplate>
        </Controls.treeGridOld:View>
    </Controls.scroll:Container>
</div>
