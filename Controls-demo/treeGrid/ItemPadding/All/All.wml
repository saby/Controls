<div class="controlsDemo__wrapper">


    <div class="controlsDemo__cell controlsDemo__mr2 controlsDemo_treeGrid-iP-all-default">
        <div class="controls-text-label_theme-{{_options.theme}}">Стандартные отступы</div>
        <Controls.treeGrid:View
                keyProperty="id"
                source="{{_viewSource}}"
                columns="{{_columns}}"
                parentProperty="parent"
                nodeProperty="type"/>
    </div>

