        <Router.router:Reference attr:class="controls-text-label_theme-{{_options.theme}}"
                                 state="/Controls-demo/app/:app"
                                 app="{{ 'Controls-demo/treeGrid/MultiSelect/MultiSelectVisibility/Visible/Index' }}">
            <a href="{{content.href}}">Чекбоксы всегда показываются</a>
        </Router.router:Reference>
        <Controls-demo.treeGrid.MultiSelect.MultiSelectVisibility.Visible.Index/>
