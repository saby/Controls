    <div class="controlsDemo__cell">
        <Router.router:Reference attr:class="controls-text-label_theme-{{_options.theme}}"
                                 state="/Controls-demo/app/:app"
                                 app="{{ 'Controls-demo/treeGrid/MultiSelect/MultiSelectVisibility/OnHover/Index' }}">
            <a href="{{content.href}}">Чекбоксы показываются только при наведении</a>
        </Router.router:Reference>
        <Controls-demo.treeGrid.MultiSelect.MultiSelectVisibility.OnHover.Index/>
