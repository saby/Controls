                    chooseQuarters="{{false}}"/>
        </div>
        <div class="controlsDemo__cell">
            <div class="controls-text-label_theme-{{_options.theme}} controlsDemo__maxWidth200">chooseHalfyears=true; chooseMonths=true; chooseQuarters=true; chooseYears=true;</div>
            <Controls.dateRange:RangeShortSelector
                    bind:startValue="_startValue4"
                    bind:endValue="_endValue4"/>
        </div>
    </div>
    <div class="controlsDemo__wrapper controlsDemo__flex controlsDemo__flex-jc-sa"  style="align-items: flex-start">
        <div class="controlsDemo__cell">
            <div class="controls-text-label_theme-{{_options.theme}} controlsDemo__maxWidth200">choseYears=false</div>
            <Controls.dateRange:RangeShortSelector
                    chooseYears="{{false}}"
                    bind:startValue="_startValue5"
                    bind:endValue="_endValue5"/>
        </div>
    </div>
</div>
