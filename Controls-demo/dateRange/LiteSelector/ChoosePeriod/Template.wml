            <div class="controls-text-label_theme-{{_options.theme}} controlsDemo__maxWidth200">chooseHalfyears=false; chooseMonths=false; chooseQuarters=false; chooseYears=true;</div>
            <Controls.dateRange:RangeShortSelector
                    bind:startValue="_startValue1"
                    bind:endValue="_endValue1"
                    chooseHalfyears="{{false}}"
                    chooseMonths="{{false}}"
                    chooseQuarters="{{false}}"/>
        </div>
        <div class="controlsDemo__cell">
            <div class="controls-text-label_theme-{{_options.theme}} controlsDemo__maxWidth200">chooseHalfyears=false; chooseMonths=false; chooseQuarters=true; chooseYears=true;</div>
            <Controls.dateRange:RangeShortSelector
                    bind:startValue="_startValue2"
                    bind:endValue="_endValue2"
                    chooseHalfyears="{{false}}"
                    chooseMonths="{{false}}"/>
        </div>
        <div class="controlsDemo__cell">
            <div class="controls-text-label_theme-{{_options.theme}} controlsDemo__maxWidth200">chooseHalfyears=false; chooseMonths=true; chooseQuarters=false; chooseYears=true;</div>
            <Controls.dateRange:RangeShortSelector
                    bind:startValue="_startValue3"
                    bind:endValue="_endValue3"
