<div class="asyncDemo__column">
    <Controls.buttons:Button readOnly="{{false}}" iconSize="s" caption="Step 1" on:click="_setGridState()"/>
    <Controls.buttons:Button readOnly="{{false}}" iconSize="s" caption="Step 2" on:click="_setReadState()"/>
    <Controls.buttons:Button readOnly="{{false}}" iconSize="s" caption="Step 3" on:click="_setGridState()"/>
    <div class="asyncDemo__column">
        <div class="asyncDemo__scheme">
            <div class="asyncDemo__scheme__canvas">
                <Controls-demo.AsyncTest.Childs.CaseSecond.NotAsync.Background value="5"/>
                <ws:if data="{{_isGrid}}">
                    <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Grid value="5" delay="300"/>
                </ws:if>
                <Controls.dragnDrop:Container name="dragNDrop">
                    <ws:if data="{{_readOnly}}">
                        <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Element value="10" delay="50"/>
                    </ws:if>
                    <ws:else>
                        <div class="asyncDemo__scheme__wrapper">
                            <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Element value="5" delay="800"/>
                        </div>
                    </ws:else>
                </Controls.dragnDrop:Container>
            </div>
        </div>
        <div class="asyncDemo__scheme">
            <div class="asyncDemo__scheme__canvas">
                <Controls-demo.AsyncTest.Childs.CaseSecond.NotAsync.Background value="5"/>
                <ws:if data="{{_isGrid}}">
                    <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Grid value="5" delay="300"/>
                </ws:if>
                <Controls.scroll:Container attr:class="asyncDemo__column__scroll" shadowMode="js">
                    <ws:if data="{{_readOnly}}">
                        <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Element value="10" delay="50"/>
                    </ws:if>
                    <ws:else>
                        <div class="asyncDemo__scheme__wrapper">
                            <Controls-demo.AsyncTest.Childs.CaseSecond.Async.Element value="5" delay="800"/>
                        </div>
                    </ws:else>
                </Controls.scroll:Container>
            </div>
        </div>
    </div>
</div>
