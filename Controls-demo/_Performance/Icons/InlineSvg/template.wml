<div class="controlsDemo__wrapper">
    <Controls.list:View
            keyProperty="id"
            source="{{_source}}">
        <ws:itemTemplate>
            <ws:partial template="Controls/list:ItemTemplate"
                        scope="{{itemTemplate}}">
                <ws:contentTemplate>
                    <div>
                        {{contentTemplate.itemData.item.title}}
                        <svg class="controls-icon_size-m controls-icon_style-danger">
                            <use xlink:href="{{contentTemplate.itemData.item.svgIconUrl}}"/>
                        </svg>
                    </div>
                    <div>
                        <ws:for data="i in 10">
                            <div>Блок с иконкой {{i}}
                                <svg class="controls-icon_size-m controls-icon_style-danger">
                                    <use xlink:href="{{contentTemplate.itemData.item.svgIconUrl}}"/>
                                </svg>
                            </div>
                        </ws:for>
                    </div>
                </ws:contentTemplate>
            </ws:partial>
        </ws:itemTemplate>
    </Controls.list:View>
</div>
