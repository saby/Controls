            <div class="controlsDemo__wrapper controlsDemo_treeGrid-offset-levelIndent-all-custom">
                <Controls.treeGrid:View
                        keyProperty="id"
                        source="{{_viewSource}}"
                        columns="{{_columns}}"
                        bind:expandedItems="_expandedItems"
