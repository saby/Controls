<div class="controlsDemo__wrapper">
    <Controls.list:DataContainer name="dataContainer"
                                 source="{{_viewSource}}"
                                 keyProperty="key"
                                 parentProperty="parent">
        <div>
            <Controls.buttons:Button icon="icon-Move" caption="Переместить" on:click="_moveButtonClick()" viewMode="linkButton"/>
            <Controls.operations:Controller bind:selectedKeys="_selectedKeys" bind:excludedKeys="_excludedKeys">
                <Controls.list:Container>
                    <Controls.treeGrid:View
                            name="treeGrid"
                            multiSelectVisibility="visible"
                            nodeProperty="type"
                            columns="{{_columns}}">
                        <ws:moveDialogTemplate templateName="Controls/moverDialog:Template">
                            <ws:templateOptions
                                    root="{{null}}"
                                    rootVisible="{{true}}"
                                    keyProperty="key"
                                    parentProperty="parent"
                                    displayProperty="title"
                                    hasChildrenProperty="hasChild"
                                    rootTitle="Каталог"
                                    searchParam="title"
                                    nodeProperty="type"
                                    source="{{_viewSource}}"
                                    columns="{{_columns}}"/>
                        </ws:moveDialogTemplate>
                    </Controls.treeGrid:View>
                </Controls.list:Container>
            </Controls.operations:Controller>
        </div>
    </Controls.list:DataContainer>
</div>
