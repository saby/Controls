<div class="{{ (gridColumn || emptyViewColumn).getContentClasses(theme, topSpacing, bottomSpacing) }}">

    <ws:if data="{{ content || contentTemplate }}">
        <!-- Прикладной контент -->
        <ws:partial template="{{ content || contentTemplate }}"
                    column="{{ gridColumn || emptyViewColumn }}"
                    emptyViewColumn="{{ gridColumn || emptyViewColumn }}"/>
    </ws:if>
</div>
