<div class="controls_popupTemplate_theme-{{_options.theme}}
            controls-ConfirmationTemplate
            controls-ConfirmationTemplate__status-{{_options.style}}
            controls-ConfirmationTemplate__size-{{_options.size}}
            controls-Popup__isolatedFocusingContext"
    ws-tab-cycling="true"
    ws-delegates-tabfocus="true">
    <div class="controls-ConfirmationTemplate__body">
        <div class="controls-ConfirmationTemplate__main">
            <ws:partial template="{{_options.bodyContentTemplate}}"/>
        </div>
        <div class="controls-ConfirmationTemplate__footer">
            <ws:partial template="{{_options.footerContentTemplate}}"/>
        </div>
    </div>
</div>
