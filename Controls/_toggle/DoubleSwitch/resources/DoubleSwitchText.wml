<span on:mouseover="_toggleSwitchHoverState(_toggleValue !== _nextValue)"
      on:mouseout="_toggleSwitchHoverState(false)"
      class="{{_orientation === 'vertical' ? ' controls-DoubleSwitch__text_vertical'}}
            {{ _value && _enabled ? 'controls-DoubleSwitch__text_enabled_selected' :
            (_enabled ? 'controls-DoubleSwitch__text_enabled_unselected' :
            (_value ? 'controls-DoubleSwitch__text_disabled_selected' : 'controls-DoubleSwitch__text_disabled_unselected'))}}"
      on:click="_clickTextHandler(_nextValue)">
    <ws:if data="{{_caption}}">
        <ws:partial template="{{_caption}}"/>
    </ws:if>
</span>