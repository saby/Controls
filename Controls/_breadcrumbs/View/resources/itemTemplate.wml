<div class="controls-BreadCrumbsView__crumb{{edge ? ' controls-BreadCrumbsView__max-width__edge' : ' controls-BreadCrumbsView__max-width'}} controls-BreadCrumbsView__crumb_theme-{{_options.theme}}">
    <ws:if data="{{ itemData.hasArrow }}">
        <span class="controls-BreadCrumbsView__arrow_theme-{{_options.theme}} icon-size icon-DayForwardBsLine{{_options.readOnly ? '' : ' controls-BreadCrumbsView__arrow_enabled_theme-' + _options.theme}}"></span>
    </ws:if>
    <span class="controls-BreadCrumbsView__titleWrapper"
         title="{{itemData.getPropValue(itemData.item, displayProperty)}}">
        <span class="controls-BreadCrumbsView__title{{_options.readOnly ? '' : ' controls-BreadCrumbsView__title_enabled_theme-' + _options.theme}} controls-BreadCrumbsView__title_theme-{{_options.theme}}"><ws:if data="{{contentTemplate}}"><ws:partial template="{{contentTemplate}}" displayProperty="{{displayProperty}}" itemData="{{itemData}}"/></ws:if><ws:else>{{ itemData.getPropValue(itemData.item, displayProperty) }}</ws:else></span>
    </span>
</div>
