<div attr:class="controls-Input-DatePicker">
   <Controls._input.DateTime
      name="input"
      value="{{_options.value}}"
      mask="{{_options.mask}}"
      size="{{ _options.size }}"
      fontStyle="{{_options.fontStyle}}"
      fontSize="{{_options.fontSize}}"
      fontWeight="{{_options.fontWeight}}"
      fontColorStyle="{{_options.fontColorStyle}}"
      borderStyle="{{_options.borderStyle}}"
      borderVisibility="{{_options.borderVisibility}}"
      inlineHeight="{{_options.inlineHeight}}"
      contrastBackground="{{ false }}"
      rightFieldTemplate="{{ _options.rightFieldTemplate }}"
      style="{{_options.style}}"
      tagStyle="{{ _options.tagStyle }}"
      selectOnClick="{{_options.selectOnClick}}"
      placeholder="{{_options.placeholder}}"
      validationStatus="{{_options.validationStatus}}"
      tooltip="{{_options.tooltip}}"
      dateConstructor="{{_options.dateConstructor}}"
      valueValidators="{{_options.valueValidators}}"
      validateByFocusOut="{{_options.validateByFocusOut}}"
      on:validateFinished="_proxyEvent('validateFinished')"
      on:valueChanged="_proxyEvent('valueChanged')"
      on:inputCompleted="_proxyEvent('inputCompleted')"
      on:tagClick="_proxyEvent('tagClick')"
      on:tagHover="_proxyEvent('tagHover')">
   </Controls._input.DateTime>
   <span class="controls-Input-DatePicker__buttonWrapper_theme-{{_options.theme}}" attr:tabindex="-1">
      <span class="ws-flexbox ws-align-items-center controls-Input-DatePicker__buttonBaseLine">
         <span
                 attr:class="controls-Input-DatePicker__button
                              controls-Input-DatePicker__button_theme-{{_options.theme}}
                              controls-icon icon-Calendar2 controls-icon_style-secondary_theme-{{_options.theme}}"
                 iconStyle="secondary"
                 on:click="openPopup()">
         </span>
      </span>
   </span>
   <Controls.popup:Sticky name="opener"
                                 closeOnOutsideClick="{{true}}"
                                 actionOnScroll="close">
   </Controls.popup:Sticky>
</div>
