<ws:if data="{{isVisibleButton()}}">
   <div title="{{_options.passwordVisible ? rk('Скрыть') : rk('Показать')}}"
        class="controls-PasswordInput__showPassword controls-PasswordInput__showPassword_theme_{{getTheme()}}
               controls-PasswordInput__showPassword_margin-{{horizontalPadding}}_theme_{{getTheme()}} {{_options.passwordVisible ? 'icon-Hide' : 'icon-ShowBig'}}
               controls-PasswordInput_{{ _options.passwordVisible ? 'visible' : 'invisible' }}"
        on:click="_toggleVisibilityHandler()">
   </div>
</ws:if>
